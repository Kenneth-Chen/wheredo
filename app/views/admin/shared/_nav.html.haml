- nav_modifier = "navbar-inverse" unless Rails.env.production?
%nav.navbar.navbar-default.navbar-fixed-top{class: nav_modifier}
  .container
    .navbar-header
      = button_tag type: "button", class: "navbar-toggle collapased",
        data: {toggle: "collapse", target: "#admin-navbar-collapse"},
        "aria-expanded": "false" do
        = content_tag :span, "Toggle Navigation", class: "sr-only"
        = content_tag :span, nil, class: "icon-bar"
        = content_tag :span, nil, class: "icon-bar"
        = content_tag :span, nil, class: "icon-bar"

      = link_to "Where Do".html_safe, root_path, class: "navbar-brand"

    #admin-navbar-collapse.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", role: "button", data: {toggle: "dropdown"},
            "aria-haspopup": "true", "aria-expanded": "false" do
            Stylists
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Dashboard", admin_root_path
            %li= link_to "Users", admin_users_path
            %li= link_to "Mass Send", admin_mass_send_path
