                                            <label>
                                                <%= check_box_tag :location, location.name %>
                                                <h5 style="display: inline"><%= location.name %></h5>
                                            </label>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                            <div class="space-20"></div>
                            <div class="row">
